{
  "name": "abdullahmuchsin/belajar-php-unit-test",
  "description": "Belajar PHP Unit Test",
  "type": "project",
  "autoload": {
    "psr-4": {
      "AbdullahMuchsin\\Test\\": "src/"
    }
  },
  "authors": [
    {
      "name": "AbdullahMuchsin",
      "email": "abdullahmuchsin96@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.5"
  },
  "autoload-dev": {
    "psr-4": {
      "AbdullahMuchsin\\Test\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "test:counter": "phpunit --configuration phpunit.xml --testsuite counter",
    "test:product": "phpunit --configuration phpunit.xml --testsuite product"
  }
}
